      <div id="pendinghousekeeping-section" class="content-section">
        <div class="heading"><h3>Pending Housekeeping Requests</h3></div> 
      
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>RRN</th>
              <th>Block</th>
              <th>Room No</th>
              <th>Maintenance Done</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% pendinghousekeeping_requests.forEach(pendinghousekeeping_request => { %>
              <tr>
                <td><%= pendinghousekeeping_request.id %></td>
                <td><%= pendinghousekeeping_request.name %></td>
                <td><%= pendinghousekeeping_request.rrn %></td>
                <td><%= pendinghousekeeping_request.block %></td>
                <td><%= pendinghousekeeping_request.room_number %></td>
                <td><%= pendinghousekeeping_request.maintenance_done %></td>
                <td>
                  <form method="post" action="/approvehousekeeping/<%= pendinghousekeeping_request.id %>">
                    <button type="submit">Approve</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
   
