      <div id="changemaintenanceuserpassword-section" class="content-section">
        <div class="heading"><h3>Change Maintenance User Password</h3></div> 
        <form id="changePasswordForm" method="post" action="/changemaintenancepassword">
          <div class="change-password-form-group">
            <label for="oldPassword">Old Password:</label>
            <input type="password" name="oldPassword"  id="password4" class="password-input"  required>
            <i class="fas fa-eye password-toggle" data-target="password4" style="cursor: pointer;"></i>
