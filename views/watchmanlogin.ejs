<!DOCTYPE html>
<html class="light" lang="en">

<head>
  <meta charset="utf-8" />
  <meta content="width=device-width, initial-scale=1.0" name="viewport" />
  <title>Watchman Login | HostelMaster ERP</title>
  <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
  <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;500;600;700;800&amp;display=swap"
    rel="stylesheet" />
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="icon" type="image/x-icon" href="/images/logo.jpg">

  <script id="tailwind-config">
    tailwind.config = {
      darkMode: "class",
      theme: {
        extend: {
          colors: {
            "primary": "#137fec",
            "background-light": "#f6f7f8",
            "background-dark": "#101922",
          },
          fontFamily: {
            "display": ["Manrope"]
          },
          borderRadius: { "DEFAULT": "0.25rem", "lg": "0.5rem", "xl": "0.75rem", "full": "9999px" },
        },
      },
    }
  </script>
  <style>
    body {
      font-family: 'Manrope', sans-serif;
    }
  </style>
</head>

<body class="bg-gray-50 min-h-screen overflow-x-hidden">
  <div class="flex min-h-screen">
    <!-- Left Side: Login Form -->
    <div class="w-full lg:w-1/2 flex flex-col justify-center px-6 md:px-12 lg:px-24 py-12 bg-white relative">
      <!-- Back Button -->
      <button onclick="history.back()"
        class="absolute top-8 left-8 p-2 rounded-full hover:bg-gray-100 transition-colors text-gray-400 hover:text-gray-900 flex items-center justify-center">
        <i class="fa-solid fa-arrow-left text-xl"></i>
      </button>

      <div class="max-w-md w-full mx-auto space-y-8">
        <!-- Logo -->
        <div class="flex justify-start">
          <img src="https://crescent.mastersofterp.in/Images/DEFAULT_BG/default_logo1.png" alt="College Logo"
            class="h-12 object-contain">
        </div>

        <!-- Header Text -->
        <div>
          <h2 class="text-3xl font-black text-gray-900 tracking-tight">Watchman Login</h2>
          <p class="mt-2 text-sm text-gray-500 font-medium">Security and Gate management portal.</p>
        </div>

        <!-- Error Message -->
        <% if (locals["error-message"]) { %>
          <div class="p-4 bg-red-50 border border-red-100 rounded-xl flex items-center gap-3 text-red-600">
            <i class="fa-solid fa-circle-exclamation text-sm"></i>
            <p class="text-sm font-bold">
              <%= locals["error-message"] %>
            </p>
          </div>
          <% } %>

            <!-- Form -->
            <form id="loginForm" method="post" action="/watchman" class="mt-8 space-y-6">
              <div class="space-y-5">
                <div class="space-y-2">
                  <label for="username" class="text-sm font-bold text-gray-700">Security Email</label>
                  <div class="relative group">
                    <div
                      class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-gray-400 group-focus-within:text-primary transition-colors">
                      <i class="fa-solid fa-user-shield text-lg"></i>
                    </div>
                    <input type="email" id="username" name="email" required placeholder="security@kbahostel.com"
                      class="block w-full pl-11 pr-4 py-3.5 border border-gray-200 bg-gray-50 rounded-xl text-gray-900 text-sm focus:ring-2 focus:ring-primary/20 focus:border-primary focus:bg-white outline-none transition-all duration-200">
                  </div>
                </div>

                <div class="space-y-2">
                  <div class="flex items-center justify-between">
                    <label for="password" class="text-sm font-bold text-gray-700">Password</label>
                  </div>
                  <div class="relative group">
                    <div
                      class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-gray-400 group-focus-within:text-primary transition-colors">
                      <i class="fa-solid fa-lock text-lg"></i>
                    </div>
                    <input type="password" id="password" name="password" required placeholder="••••••••"
                      class="block w-full pl-11 pr-12 py-3.5 border border-gray-200 bg-gray-50 rounded-xl text-gray-900 text-sm focus:ring-2 focus:ring-primary/20 focus:border-primary focus:bg-white outline-none transition-all duration-200">
                    <button type="button" id="togglePassword"
                      class="absolute inset-y-0 right-0 pr-4 flex items-center text-gray-400 hover:text-gray-600 transition-colors">
                      <i class="fa-solid fa-eye text-lg select-none"></i>
                    </button>
                  </div>
                </div>
              </div>

              <button type="submit"
                class="w-full flex justify-center items-center py-4 px-4 border border-transparent rounded-xl shadow-lg shadow-primary/25 text-base font-black text-white bg-primary hover:bg-[#0c66c2] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-all duration-250">
                Log In to Security Desk
              </button>

              <div class="text-center">
                <a href="/login" class="text-sm font-bold text-gray-500 hover:text-primary transition-colors">Return to
                  Student Login</a>
              </div>
            </form>
      </div>
    </div>

    <!-- Right Side -->
    <div class="hidden lg:block lg:w-1/2 relative bg-emerald-950">
      <img src="/images/home.jpg" alt="Security Operations"
        class="absolute inset-0 w-full h-full object-cover opacity-50">
      <div class="absolute inset-0 bg-gradient-to-t from-emerald-950/90 via-transparent to-transparent"></div>

      <div class="absolute inset-0 flex flex-col justify-end p-20 text-white space-y-6">
        <div class="size-16 rounded-2xl bg-primary flex items-center justify-center shadow-xl">
          <i class="fa-solid fa-shield-halved text-4xl"></i>
        </div>
        <h1 class="text-5xl font-black leading-tight tracking-tight">Campus Safety First</h1>
        <p class="text-xl text-white/80 font-medium max-w-md">Real-time gate pass verification and visitor tracking to
          ensure a secure campus 24/7.</p>
      </div>
    </div>
  </div>

  <!-- Password Toggle Script -->
  <script>
    const togglePassword = document.querySelector('#togglePassword');
    const passwordInput = document.querySelector('#password');
    const toggleIcon = togglePassword.querySelector('i');

    togglePassword.addEventListener('click', function () {
      const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
      passwordInput.setAttribute('type', type);
      if (type === 'password') {
        toggleIcon.classList.remove('fa-eye-slash');
        toggleIcon.classList.add('fa-eye');
      } else {
        toggleIcon.classList.remove('fa-eye');
        toggleIcon.classList.add('fa-eye-slash');
      }
    });
  </script>
</body>

</html>