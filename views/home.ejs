<%- include('partials/header')%>

    <!-- Simple Hero Section -->
    <section class="hero-section">
        <div class="hero-content">
            <div class="hero-badge">
                <i class="fas fa-star"></i>
                <span>Premium Student Living</span>
            </div>

            <h1 class="hero-title">
                Welcome to <span class="gradient-text">KBA Men's Hostel</span>
            </h1>

            <p class="hero-subtitle">
                Your Home Away From Home at BSA Crescent Institute
            </p>

            <p class="hero-location">
                <i class="fas fa-map-marker-alt"></i>
                Tamil Nadu, India
            </p>

            <div class="hero-cta">
                <a href="/gatepass" class="cta-button primary">
                    Get Gate Pass
                    <i class="fas fa-arrow-right"></i>
                </a>
                <a href="/aboutus" class="cta-button secondary">
                    Learn More
                </a>
            </div>

            <div class="hero-stats">
                <div class="stat-item">
                    <div class="stat-number">500+</div>
                    <div class="stat-label">Students</div>
                </div>
                <div class="stat-divider"></div>
                <div class="stat-item">
                    <div class="stat-number">200+</div>
                    <div class="stat-label">Rooms</div>
                </div>
                <div class="stat-divider"></div>
                <div class="stat-item">
                    <div class="stat-number">24/7</div>
                    <div class="stat-label">Support</div>
                </div>
            </div>
        </div>
    </section>

    <!-- Quick Services -->
    <section class="quick-services-section">
        <div class="container-custom">
            <div class="services-row">
                <a href="/gatepass" class="quick-service-card">
                    <div class="service-icon-wrapper gradient-1">
                        <i class="fas fa-id-card"></i>
                    </div>
                    <h4>Gate Pass</h4>
                    <p>Request your pass</p>
                </a>
                <a href="/maintenance" class="quick-service-card">
                    <div class="service-icon-wrapper gradient-2">
                        <i class="fas fa-tools"></i>
                    </div>
                    <h4>Maintenance</h4>
                    <p>Report issues</p>
                </a>
                <a href="/housekeeping" class="quick-service-card">
                    <div class="service-icon-wrapper gradient-3">
                        <i class="fas fa-broom"></i>
                    </div>
                    <h4>Housekeeping</h4>
                    <p>Cleaning requests</p>
                </a>
                <a href="/medical" class="quick-service-card">
                    <div class="service-icon-wrapper gradient-4">
                        <i class="fas fa-first-aid"></i>
                    </div>
                    <h4>Medical</h4>
                    <p>Health support</p>
                </a>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features-section">
        <div class="container-custom">
            <div class="section-header">
                <span class="section-badge">Features</span>
                <h2 class="section-title">Why Choose <span class="gradient-text">KBA Hostel</span></h2>
                <p class="section-subtitle">Experience comfort and convenience</p>
            </div>

            <div class="features-grid">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h3>24/7 Security</h3>
                    <p>Round-the-clock security with CCTV surveillance</p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-wifi"></i>
                    </div>
                    <h3>High-Speed WiFi</h3>
                    <p>Fast internet throughout the premises</p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-utensils"></i>
                    </div>
                    <h3>Nutritious Meals</h3>
                    <p>Healthy meals prepared fresh daily</p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-bed"></i>
                    </div>
                    <h3>Spacious Rooms</h3>
                    <p>Comfortable rooms for study and rest</p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-robot"></i>
                    </div>
                    <h3>AI-Powered System</h3>
                    <p>Smart complaint classification and routing</p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-tools"></i>
                    </div>
                    <h3>Quick Maintenance</h3>
                    <p>Fast response to all maintenance requests</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Announcement -->
    <section class="announcement-section">
        <div class="announcement-container">
            <div class="announcement-icon">
                <i class="fas fa-bullhorn"></i>
            </div>
            <div class="announcement-content">
                <div class="announcement-text">
                    <span class="announcement-label">Announcement</span>
                    <p>New semester registrations open. Experience premium living with modern amenities.</p>
                </div>
            </div>
        </div>
    </section>

    <%- include('partials/footer')%>